					<c:set var="Day_of_the_week" value="${fn:split('월,화,수,목,금,토,일', ',')}" /><!-- 요일을 결정지을 변수 선언 -->
					<c:set var="startDay" value="4" /> <!-- 금요일 -->

					<c:forEach var="i" begin="1" end="31">
					  <c:set var="day" value="${(i + startDay - 1) % 7}" />
					  <c:set var="dayOfWeek" value="" />
					  <c:choose>
					    <c:when test="${day == 6}">
					      <c:set var="dayOfWeek" value="토" />
					    </c:when>
					    <c:when test="${day == 0}">
					      <c:set var="dayOfWeek" value="일" />
					    </c:when>
					    <c:otherwise>
					      <c:set var="dayOfWeek" value="${Day_of_the_week[day]}" />
					    </c:otherwise>
					  </c:choose>
					  <input type="button" value="${dayOfWeek} ${i}"><br>
					</c:forEach>
					
